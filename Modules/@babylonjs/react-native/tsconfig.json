{
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6", "DOM"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "resolveJsonModule": true,
    "target": "esnext",
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "submodules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}